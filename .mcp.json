{
  "mcpServers": {
    "chrome-devtool": {
      "command": "npx",
      "args": [
        "chrome-devtools-mcp@latest",
        "--headless=true",
        "--isolated=true"
      ],
      "alwaysAllow": [
        "list_console_messages",
        "emulate_cpu",
        "emulate_network",
        "click",
        "take_snapshot",
        "list_pages",
        "new_page",
        "navigate_page",
        "fill",
        "select_page",
        "evaluate_script",
        "fill_form",
        "take_screenshot"
      ]
    }
  }
}